
#include <stdio.h>
int main() {
    char str[300], longest[100];
    int i = 0, j = 0, maxLen = 0, currLen = 0, start = 0;
    printf("Enter a sentence: ");
    scanf("%[^\n]", str);
    while (str[i] != '\0') {
        if (str[i] != ' ') {
            currLen++;
        } 
        else {
            if (currLen > maxLen) {
                maxLen = currLen;
                for (j = 0; j < currLen; j++)
                    longest[j] = str[start + j];
                longest[currLen] = '\0';
            }
            currLen = 0;
            start = i + 1;  
        }
        i++;
    }
    if (currLen > maxLen) {
        maxLen = currLen;
        for (j = 0; j < currLen; j++)
            longest[j] = str[start + j];
        longest[currLen] = '\0';
    }
    printf("Longest word: %s\n", longest);
    return 0;
}
