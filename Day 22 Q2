#include <stdio.h>

int main() {
    int n, i;
    float sum = 0.0, numerator = 1.0, denominator = 2.0;

    printf("Enter number of terms (n): ");
    scanf("%d", &n);

    for (i = 1; i <= n; i++) {
        sum = sum + (numerator / denominator);
        numerator += 2;     
        denominator += 2;   
    }

    printf("Sum of the series = %.2f\n", sum);

    return 0;
}
