
#include <stdio.h>
int main() {
    char name[200];
    int i = 0;
    printf("Enter full name: ");
    scanf("%[^\n]", name);
    if (name[0] != ' ')
        printf("%c. ", name[0]);
    while (name[i] != '\0') {
        if (name[i] == ' ' && name[i + 1] != ' ' && name[i + 1] != '\0') {
            int j = i + 1;
            int spaceFound = 0;
            while (name[j] != '\0') {
                if (name[j] == ' ') {
                    spaceFound = 1;
                    break;
                }
                j++;
            }
            if (spaceFound)
                printf("%c. ", name[i + 1]);
            
            else {
                printf("%s", &name[i + 1]);
                break;
            }
        }
        i++;
    }
    return 0;
}
