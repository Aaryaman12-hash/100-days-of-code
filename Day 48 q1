
#include <stdio.h>
int main() {
    char str1[200], str2[200], concat[400];
    int i = 0, j = 0, k = 0, len1 = 0, len2 = 0, found = 0;
    printf("Enter first string: ");
    scanf("%[^\n]", str1);
    getchar(); 
    printf("Enter second string: ");
    scanf("%[^\n]", str2);
    while (str1[len1] != '\0') len1++;
    while (str2[len2] != '\0') len2++;
    if (len1 != len2) {
        printf("Not a rotation.\n");
        return 0;
    }
    for (i = 0; i < len1; i++)
        concat[i] = str1[i];
    for (j = 0; j < len1; j++)
        concat[i + j] = str1[j];
    concat[2 * len1] = '\0';
    for (i = 0; i < 2 * len1; i++) {
        if (concat[i] == str2[0]) {  
            for (k = 0; k < len1; k++) {
                if (concat[i + k] != str2[k])
                    break;
            }
            if (k == len1) {
                found = 1;
                break;
            }
        }
    }
    if (found)
        printf("Strings are rotations.\n");
    else
        printf("Not a rotation.\n");
    return 0;
}
